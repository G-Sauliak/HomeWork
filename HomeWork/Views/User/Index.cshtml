@model HomeWork.Models.IndexViewModel
@using HomeWork.Models;

@{
    ViewBag.Title = "Index";
}

<script src="~/Scripts/jquery-1.10.2.js"></script>
<script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
<style>
    .list-group-item:hover, a.list-group-item:focus {
        text-decoration: none;
        background-color: rgb(149, 212, 255);
    }

    .glyphicon-info-sign {
        color: rgb(255, 106, 0);
    }

    .list-group-item:active {
        background-color: rgb(149, 212, 255);
    }

    .glyphicon-user {
        color: rgb(229, 154, 101);
    }

    .panel-footer .pagination {
        margin: 0;
    }

    .panel-body .radio, .checkbox {
        display: inline-block;
        margin: 0px;
    }


    .list-group {
        margin-bottom: 0px;
    }
</style>

<div class="container body-content" id="MainContainer">
    <h2>List Users</h2>

    <div class="row">
        <div class="container" id="UserListBox">
           @Html.Partial("ListUsers",Model)
        </div>

    </div>
    <div class="form-horizontal" style="margin-top: 50px">
        <div class="form-group">
            <div class="col-md-10 col-md-offset-10">
                <input type="button" class="btn btn-default" onclick="window.location='@Url.Action("AddUser", "User")'" value="Add" />
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-10 col-md-offset-10">
                <input type="submit" class="btn btn-default" id="EditUser" value="Edit" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-10 col-md-offset-10">
                <input type="submit" class="btn btn-default" id="DelUser" value="Delete" />
            </div>
        </div>
    </div>

</div>

<script src="~/Scripts/list.users.js"></script>
<script>
    urlDeleteUser = '@Url.Action("DeleteUser", "User")';
    urlDetails = '@Url.Action("DetailsUser", "User")';
    urlEditGet = '@Url.Action("EditUser", "User")';
</script>
